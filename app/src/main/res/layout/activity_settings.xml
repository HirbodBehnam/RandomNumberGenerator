<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hirbod.randomnumbergenerator.SettingsActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Language"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LangSpinner"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random Multi Numbers"
        android:id="@+id/multiRandomCheckbox"
        android:layout_below="@+id/LangSpinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiplyHelp"
        android:contentDescription="Help of Multi Random Numbers"
        android:src="@drawable/ic_help_white_24dp"
        android:background="#00000000"
        android:layout_below="@+id/LangSpinner"
        android:layout_toRightOf="@+id/multiRandomCheckbox"
        android:layout_toEndOf="@+id/multiRandomCheckbox" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vote Application"
        android:id="@+id/voteBTN"
        android:layout_below="@+id/multiRandomCheckbox"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Apps"
        android:id="@+id/otherAppsBTN"
        android:layout_below="@+id/voteBTN"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GitHub"
        android:id="@+id/ShowSourceBTN"
        android:layout_below="@+id/otherAppsBTN"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        android:text="@string/Settings_Creator"
        android:id="@+id/textView5"
        android:layout_above="@+id/BottomOfPageLayout"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/BottomOfPageLayout"
        android:gravity="center_horizontal">
        <ir.adad.banner.AdadBannerAd
            android:id="@+id/banner_ad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:token="9a46c208-5198-4759-89ab-42206a659861"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</RelativeLayout>
